{
  "extends": [
    "../.eslintrc.json"
  ],
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // Server-specific overrides
    "no-console": "off",
    "import/no-unresolved": [
      "error",
      {
        "ignore": [
          "^#"
        ]
      }
    ],
    "prefer-destructuring": "warn",
    "consistent-return": "warn",
    "no-param-reassign": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    "dist/",
    "coverage/"
  ]
}